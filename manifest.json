{
    "manifest_version": 2,
    "name": "URL Sender",
    "version": "1.7",
    "permissions": ["activeTab"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon1.png",
            "48": "images/icon2.png",
            "128": "images/icon3.png"
        }
    }
}